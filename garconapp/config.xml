<?xml version='1.0' encoding='utf-8'?>
<widget id="org.danielmendes.garconapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Garçonete Só de Cenoura</name>
    <description>
        App para uso das garçonetes dentro de restaurante
    </description>
    <author email="qualquer@cordova.apache.org" href="https://github.com/Dadinel">
        Daniel Mendes
    </author>
    <preference name="Orientation" value="portrait" />
    <preference name="Fullscreen" value="true" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackgroundColor" value="0xF2F2F2FF" />
    <platform name="ios">
        <preference name="DisallowOverscroll" value="true" />
    </platform>
    <icon src="resources/icon.png" />
    <splash src="resources/splash.png" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.2" />
    <platform name="android">
        <preference name="StatusBarBackgroundColor" value="#E86C13" />
    </platform>
    <platform name="ios">
        <preference name="StatusBarOverlayWebView" value="false" />
        <preference name="StatusBarBackgroundColor" value="#F57F17" />
    </platform>
    <plugin name="phonegap-plugin-barcodescanner" spec="^8.0.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <access origin="http://cozinhapp.sergiolopes.org/" />
</widget>
